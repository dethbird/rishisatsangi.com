{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
    <h2>{{data.name}}</h2>
    <div class="clearfix"></div>
    <a href="{{data.site_url}}" target="_blank">{{data.site_url}}</a><br />
    <blockquote>{{data.description|raw}}</blockquote>
    <div class="clearfix"></div>

		<div class="row" >
				{% for item in data.items %}

					<div class="site-thumbnail col-md-9">
						<strong>{{item.title}}</strong><br />
						<small>{{item.date_modified}}</small>
						<br />
						<div>{{item.content|raw}}</div>
						<div class="clearfix"></div>

					</div>
				{% endfor %}
		</div>
{% endblock %}

