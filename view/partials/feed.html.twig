{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} / Blogs / {{data.name}}{% endblock %}

 {% block opengraph_meta %}
  		{{parent()}}
		<meta property="og:title" content="RishiSatsangi.com / Blogs / {{data.name}}">
		<meta property="og:description" content="{{data.description|striptags}} | {{data.site_url}}">
  {% endblock %} 

{% block body %}
	{{ parent() }}

    <div class="container recent-activity" />
	    <h1>{{data.name}}</h1>
	    <div class="clearfix"></div>
	    <a href="{{data.site_url}}" target="_blank">{{data.site_url}}</a><br />
	    <blockquote>{{data.description|raw}}</blockquote>
	    <div class="clearfix"></div>
				{% for item in data.items %}
    			<div class="row recent-activity" >


    				<div class="activity-stamp well">
	 					<span class="activity-icon comment"></span>
			 			<span class="date">{{item.date_modified}}</span><br />
			 			<span class="title"><a href="{{item.url}}" target="_blank">{{item.title}}</a></span>
			 		</div>

			 		<div class="recent-activity-body">
						<div>{{item.content|raw}}</div>
		 			</div>
				</div>
				{% endfor %}
		</div>
	</div>
{% endblock %}

