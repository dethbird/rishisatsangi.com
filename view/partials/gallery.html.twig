{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
    <h2>{{data.name}}</h2>
    <div class="clearfix"></div>
    <blockquote>{{data.description|raw}}</blockquote>
    <div class="clearfix"></div>

		<div class="row" >
				{% for content in data.contents %}

					<div class="site-thumbnail col-md-3">
						{{content.name}}<br />
						
						{% if content.type=='image' %}
						<img src="{{content.image_url|resizeImage(180,180)}}" class="img-rounded acb-thumb" data-image-url="{{content.image_url}}" data-title="{{content.name}}" >
						{% endif %}

						{% if content.type=='youtube' %}
						<img src="{{content.image_url|resizeImage(180,180)}}" class="img-rounded acb-youtube-thumb" data-youtube-link="{{content.youtube_link}}" data-title="{{content.name}}" >
						{% endif %}

					</div>
				{% endfor %}
		</div>
{% endblock %}

