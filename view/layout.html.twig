  <script>
    $(document).ready(function(){
      $('#myModal').on('hidden.bs.modal', function () {
          $('#myModalContent').html('');
      });
      $(document).on('click', '.acb-thumb', function(){
        $('#myModalLabel').html($(this).attr('data-title'));
        $('#myModalContent').html("<img src='" + $(this).attr('data-image-url') + "' class='acb-full-image' id='modal-media' />");
        $('#myModal .modal-dialog').css('width', $(window).width());
        $('#myModal .modal-dialog').css('height', $(window).height());
        $('#myModal').modal();
      });
      $(document).on('click', '.acb-youtube-thumb', function(){
        $('#myModalLabel').html($(this).attr('data-title'));
        var youtube_id = $.url('?v',$(this).attr('data-youtube-link'));
        $('#myModalContent').html('<iframe id="ytplayer" type="text/html" width="640" height="360" src="https://www.youtube.com/embed/' + youtube_id + '" frameborder="0" allowfullscreen>');
        $('#myModal .modal-dialog').css('width', $(window).width());
        $('#myModal .modal-dialog').css('height', $(window).height());
        $('#myModal').modal();
      });

      var archiveCode = 0;
      $(document).on('keydown', function(e){
        archiveCode += e.keyCode;
        if (archiveCode==130) {          
          $('#archive-menu > ul > li').removeClass('hidden');
        }
      });
      $('#copyright-container').on('click', function(){
          $('#archive-menu > ul > li').removeClass('hidden');
      });
      imagesLoaded( '#content-container', function() {
        var msnry = new Masonry( '#content-container', {
          itemSelector: '.site-thumbnail'
        });
      });

    });
  </script>
  
