{% extends 'layout.html.twig' %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
	{{ parent() }}
      <div class="row">
        <div class="col-xl-12">
          <ol class="breadcrumb">
            <li><a href="#">Comics</a></li>
            <li><a href="#">&nbsp;</a></li>
          </ol>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-12">
            <h2 class="card-title">{{ comic.title }}</h2>
        </div>
      </div>
      <div class="row" id="thumbnails">
        {% for part in comic.parts %}
            <div class="card card-inverse col-lg-12">
              <div class="card-block">
                <h3 class="card-title">{{part.title}}</h3>
              </div>
            </div>
            {% for panel in part.panels %}
                <div class="card col-lg-6">
                    <img src="{{panel}}" />
                </div>
            {% endfor %}
        {% endfor %}
      </div>
{% endblock %}
