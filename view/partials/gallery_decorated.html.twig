{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} / Art / {{data.name}}{% endblock %}

 {% block opengraph_meta %}
  		{{parent()}}
		<meta property="og:title" content="RishiSatsangi.com  / Art / {{data.name}}">
		<meta property="og:description" content="{{data.description|striptags}}">
  {% endblock %} 

{% block body %}
	{{ parent() }}
    <h1>{{data.name}}</h1>
    <div class="clearfix"></div>
    <blockquote>{{data.description|raw}}</blockquote>
    <div class="clearfix"></div>
    	<!-- <pre>{{gallery|print_r}}</pre> -->
		<div class="row" id="content-container">
				{% for content in data.contents %}

					<div class="site-thumbnail col-md-4">
						<span class="title">{{content.name}}</span><br />
						
						{% if content.type=='image' %}
						<a href='{{siteUrl("/contents/")}}{{content.id}}' title="{{content.name}}"><img src="{{content.image_url|resizeImage(250,250)}}" class="img-rounded" ></a>
						{% endif %}

						{% if content.type=='youtube' %}
						<a href='{{siteUrl("/contents/")}}{{content.id}}' title="{{content.name}}"><img src="{{content.image_url|resizeImage(250,250)}}" class="img-rounded" data-youtube-link="{{content.youtube_link}}" data-title="{{content.name}}" ></a>
						{% endif %}

					</div>
				{% endfor %}
		</div>
{% endblock %}

