    <style>
        body {
            width: 792px;
            margin: 72px;
            text-shadow: 1px 2px 4px rgba(0,0,0, 0.05);
            font-family: 'Oxygen', sans-serif;
        }
        a {
            color: #0055CC;
        }
        section {
            margin: 50px 0px 0px 50px;
        }

        ul.indent {
            margin-left: 25px;
        }
        li {
            margin-top: 10px;
        }
    </style>
    {% block head %}{% endblock %}
  </head>
  <body>
    <h1>{{title}}</h1>
    <h2>{{name}}</h2>
    <span>{{location}}</span><br />
    <span>{{phone}}</span><br />
    <span>{{email}}</span><br />

    <header>
        <h3>Skills</h3>
    </header>
    <section>
        <ul>
        {% for skill in skills %}
            <li><strong>{{skill.type}}:</strong> {{skill.description|markdown}}</li>
        {% endfor %}
        </ul>
    </section>

    <header>
        <h3>Summary</h3>
    </header>
    <section>{{summary|markdown}}</section>

    <header>
        <h3>Experience</h3>
    </header>
    <section>
        {% for job in experience %}
            <h4>{{job.organization}}</h4>
            {{job.title}}<br />
            {{job.start}} - {{job.end}}<br />
            {{job.term}}<br />
            {{job.location}}<br />
            {{job.url}}<br />
            <blockquote>{{job.description|markdown}}</blockquote>
            <ul class="indent">
                {% for detail in job.details %}
                <li>{{detail|markdown}}</li>
                {% endfor %}
            </ul>
        {% endfor %}
    </section>

    <header>
        <h3>Education</h3>
    </header>
    <section>
        {% for school in education %}
            <h4>{{school.organization}}</h4>
            {{school.degree}}<br />
            {{school.graduation}}<br />
            {{school.location}}<br />
            <blockquote>{{school.description}}</blockquote>
            <ul class="indent">
                {% for detail in school.details %}
                <li>{{detail}}</li>
                {% endfor %}
            </ul>
        {% endfor %}
    </section>

    <header>
        <h3>Other</h3>
    </header>
    <section>
        <ul>
            {% for detail in other.details %}
            <li>{{detail}}</li>
            {% endfor %}
        </ul>
    </section>

    <header>
        <h3>Additional</h3>
    </header>
    <section>
        <ul>
            {% for detail in additional.details %}
            <li>{{detail}}</li>
            {% endfor %}
        </ul>
    </section>

  </body>
</html>
